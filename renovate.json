{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":pinOnlyDevDependencies", ":semanticCommits"],
  "onboarding": false,
  "requireConfig": false,
  "username": "cfsdevops",
  "enabledManagers": ["nvm", "npm"],
  "stabilityDays": 3,
  "gitAuthor": "Coolfire Devops <support@coolfiresolutions.com>",
  "platform": "github",
  "repositories": ["coolfiresolutions/auto-plugin-core"],
  "reviewersFromCodeOwners": true,
  "timezone": "America/Chicago",
  "branchPrefix": "renovate-custom/",
  "automergeType": "branch",
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "stabilityDays": 7
    },
    {
      "matchUpdateTypes": ["pin", "digest", "lockFileMaintenance"],
      "automerge": true,
      "stabilityDays": 0
    }
  ]
}
